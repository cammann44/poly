# Polymarket Copy-Trading Bot Environment Variables

# CRITICAL: Never commit .env file with real values

# Wallet Configuration
PRIVATE_KEY=your_private_key_here_without_0x_prefix
WALLET_ADDRESS=0xYourWalletAddress

# Polymarket API Credentials
# Get these from: https://polymarket.com/settings/api
POLY_API_KEY=your_api_key
POLY_API_SECRET=your_api_secret
POLY_API_PASSPHRASE=your_passphrase

# Polygon RPC (use your own node or provider)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
POLYGON_WSS_URL=wss://polygon-mainnet.g.alchemy.com/v2/your-api-key

# Optional: Marlin MEV Relay
MARLIN_API_KEY=your_marlin_key

# Optional: Alert Webhooks
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your_secure_password

# Paper Trading
PAPER_TRADING=true
